<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yahoo Info Bot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
    <style>
        #header {
            text-align: center;
            padding: 3em 0 2em 0;
        }
        strong{
            font-weight:bold;
            color:#e716a7e8;
        }
    </style>

</head>
<body>
    <header id="header">
        <h1 style="font-weight:bold;font-family:2em !important;">Talk with <strong>YaVA.</strong> Any Time. Any Where.</h1>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Yahoo Info Bot</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- Scripts -->
    <script src="~/Content/assets/js/jquery.poptrox.min.js"></script>
    <script src="~/Content/assets/js/skel.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>
